%%%%%%%%%%%%%%%%%
% Custom colors %
%%%%%%%%%%%%%%%%%

\definecolor{ep-white}{HTML}{FFFFFF}
\definecolor{ep-black}{HTML}{000000}

\definecolor{ep-gray-dark}{HTML}{263238}
\definecolor{ep-gray}{HTML}{455A64}
\definecolor{ep-gray-light}{HTML}{B0BEC5}

\definecolor{ep-alert}{HTML}{FF3D00}

\definecolor{ep-red-dark}{HTML}{B71C1C}
\definecolor{ep-red}{HTML}{D32F2F}

\definecolor{ep-green-dark}{HTML}{004D40}
\definecolor{ep-green}{HTML}{00796B}


%%%%%%%%%
% Basic %
%%%%%%%%%

\setbeamercolor*{normal text}{fg=ep-white, bg=ep-black}
\setbeamercolor*{alerted text}{fg=ep-alert, bg=ep-black}


%%%%%%%%%%%
% Palette %
%%%%%%%%%%%

\setbeamercolor*{palette primary}{fg=ep-white, bg=ep-black}
\setbeamercolor*{palette secondary}{fg=ep-white, bg=ep-black}
\setbeamercolor*{palette tertiary}{fg=ep-black, bg=ep-white}
\setbeamercolor*{palette quaternary}{fg=ep-white, bg=ep-black}


%%%%%%%%%%%%%
% Structure %
%%%%%%%%%%%%%

\setbeamercolor{structure}{fg=ep-gray-light}
\setbeamercolor{item}{fg=ep-white}
\setbeamercolor{page number in head/foot}{fg=ep-gray-light}
\setbeamercolor{frametitle}{fg=ep-white}


%%%%%%%%%
% Block %
%%%%%%%%%

\setbeamercolor{block title}{fg=ep-white, bg=ep-gray-dark}
\setbeamercolor{block body}{fg=ep-white, bg=ep-gray}

\setbeamercolor{block title alerted}{fg=ep-white, bg=ep-red-dark}
\setbeamercolor{block body alerted}{fg=ep-white, bg=ep-red}

\setbeamercolor{block title example}{fg=ep-white, bg=ep-green-dark}
\setbeamercolor{block body example}{fg=ep-white, bg=ep-green}
