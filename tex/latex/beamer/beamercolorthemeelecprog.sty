%%%%%%%%%%%%%%%%%
% Custom colors %
%%%%%%%%%%%%%%%%%

\definecolor{ep-white}{HTML}{FFFFFF}
\definecolor{ep-black}{HTML}{000000}

\definecolor{ep-gray-dark}{HTML}{263238}
\definecolor{ep-gray-darker}{HTML}{37474F}
\definecolor{ep-gray}{HTML}{455A64}
\definecolor{ep-gray-light}{HTML}{B0BEC5}

\definecolor{ep-alert}{HTML}{D50000}

\definecolor{ep-red}{HTML}{D32F2F}
\definecolor{ep-red-light}{HTML}{EF9A9A}

\definecolor{ep-green}{HTML}{00796B}
\definecolor{ep-green-light}{HTML}{80CBC4}


%%%%%%%%%
% Basic %
%%%%%%%%%

\setbeamercolor*{normal text}{fg=ep-black, bg=ep-white}
\setbeamercolor*{alerted text}{fg=ep-alert, bg=ep-white}


%%%%%%%%%%%
% Palette %
%%%%%%%%%%%

\setbeamercolor*{palette primary}{fg=ep-black, bg=ep-white}
\setbeamercolor*{palette secondary}{fg=ep-black, bg=ep-white}
\setbeamercolor*{palette tertiary}{fg=ep-white, bg=ep-black}
\setbeamercolor*{palette quaternary}{fg=ep-black, bg=ep-white}


%%%%%%%%%%%%%
% Structure %
%%%%%%%%%%%%%

\setbeamercolor{structure}{fg=ep-gray-dark}
\setbeamercolor{item}{fg=ep-black}
\setbeamercolor{page number in head/foot}{fg=ep-gray-dark}
\setbeamercolor{frametitle}{fg=ep-black}


%%%%%%%%%
% Block %
%%%%%%%%%

\setbeamercolor{block title}{fg=ep-white, bg=ep-gray}
\setbeamercolor{block body}{fg=ep-black, bg=ep-gray-light}

\setbeamercolor{block title alerted}{fg=ep-white, bg=ep-red}
\setbeamercolor{block body alerted}{fg=ep-black, bg=ep-red-light}

\setbeamercolor{block title example}{fg=ep-white, bg=ep-green}
\setbeamercolor{block body example}{fg=ep-black, bg=ep-green-light}
